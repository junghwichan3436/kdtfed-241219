extends base.pug

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(name="id" type="text" placeholder="ID" required unique)
    input(name="password" type="password" placeholder="Password" required)
    input(type="submit" value="Login" )
  hr
  div 
    span Don't have an account?
    a(href="/join") Join Now &rarr;